{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, 
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true, // Ensures compatibility between CommonJS and ES modules
    "moduleResolution": "node", // Proper resolution for Node.js modules
    "skipLibCheck": true, // Optional, speeds up type checking for node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": ["vite.config.ts"]
}
